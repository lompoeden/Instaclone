<div class="user_show">
  <div class="user_show_top">
    <div class="user_icon">
      <%= image_tag(@user.icon.url) if @user.icon && @user.icon.url %>
    </div>
    <div class="user_show_info">
      <p>name: <%= @user.name %></p>
      <p>email: <%= @user.email %></p>
      <% if @user.id == current_user.id %>
        <%= link_to '編集', edit_user_path(@user.id) %>
        <%= link_to '削除', user_path(@user.id), data: {confirm: '本当に削除していいですか？'}, method: :delete %>
      <% end %>
    </div>
  </div>

  <div class="user_show_post">
    <% @user.posts.each do |post|%>
      <div class="post_image">
        <%= link_to post_path(post.id) do %>
          <%= image_tag(post.image.url) if post.image && post.image.url %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
