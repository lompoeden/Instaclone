<h1>All Posts</h1>

<%= link_to 'New Post', new_post_path %>

<% @posts.each do |user| %>
<article class="post">
  <strong><%= post.user.name %></strong>
<% if logged_in? %>
  <button type="button" class="btn btn-default"><%= link_to 'Show', post %>
  <% if current_user.icon && current_user.icon.url %>
    <%= image_tag current_user.icon.url(), class: "icon" %>
  <% end %>
  <small><strong><%= post.user.name %></strong></small>
  <% if post.image && post.image.url %>
    <%= image_tag post.image.url(), class: "image" %>
  <% end %>
  <br>
  <large><%= post.posts %></large>
  <br>
  <small><%= post.created_at.strftime('%Y/%-m/%-d %-H:%-M') %></small>
  <% end %>
  </article>
<% end %>
