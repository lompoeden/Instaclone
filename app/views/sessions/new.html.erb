      <p><%= form.email_field :email, placeholder: 'email', class: "log-in-tag" %></p>
      <br>
      <p><%= form.password_field :password, placeholder: 'password', class: "log-in-tag" %></p>
      <br>
      <div class="row">
        <div class="col-xs-12 form-btn">
        <%= form.submit "Login" %>
        </div>
      </div>
    <% end %>

